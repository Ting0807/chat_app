<%= form_for @quiz do |f| %>

  <%= f.label :title %>
  <%= f.text_field :title, placeholder: 'Your title here' %>
  <%= f.fields_for :questions do |question_f| %>

    <%= question_f.label :query, 'Question' %>
    <%= question_f.text_field :query %>

  <% end %>

  <%= f.submit %>

<% end %>

<% if @quiz.errors.any? %>
